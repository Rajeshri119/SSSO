    $(document).ready(function () {
        var searched = "@ViewBag.SearchedWing";

        if (searched == "sociocare") {

            $('#wingDetail3').show();
        }
        else if (searched == "medicare") {

            $('#wingDetail2').show();
        }
        else if (searched == "educare") {

            $('#wingDetail1').show();
        }
        else if (searched == "spiritualcare") {

            $('#wingDetail4').show();
        }


        $('[class^="wing"]').on('click', function (e) {
            e.preventDefault();

            var numb = this.className.replace('wing', '');

            $('[id^="wingDetail"]').hide();
            $('#wingDetail' + numb).show();
        });
    });

</script>


